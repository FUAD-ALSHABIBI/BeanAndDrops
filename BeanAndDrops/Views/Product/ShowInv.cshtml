@model BeanAndDrops.Models.Entities.Product
@{
    ViewData["Title"] = "Buy Now " + Model.Product_Name;

    var vat = Model.Product_Price * 0.15;
    var total = vat + Model.Product_Price + 10;

    var name = "Fuad Al-shabibi";
    DateTime dateTime = DateTime.Now;

    int inv = new Random().Next();
}
<div class="card">
    <div class="card-body mx-4">
        <div class="container">
            <p class="my-5 mx-5" style="font-size: 30px; text-align:center;">BeanAndDrops</p>
            <div class="row">
                
                <div class="col">
                <ul class="list-unstyled">
                    <li class="text-black">@name</li>
                        <li class="text-muted mt-1"><span class="text-black">Invoice</span> #@inv</li>
                    <li class="text-black mt-1">@dateTime</li>
                </ul>
                </div>
                <div class="col-2">
                    <img class="mb-4 ms-5" width="100" height="100" src="https://cdn-icons-png.flaticon.com/512/2729/2729035.png" />
                </div>
                <hr>
                <div class="col-xl-10">
                    <p>@Model.Product_Name</p>
                </div>
                <div class="col-xl-2">
                    <p class="float-end">
                        @Model.Product_Price SAR
                    </p>
                </div>
                <hr>
            </div>
            <div class="row">
                <div class="col-xl-10">
                    <p>Tax</p>
                </div>
                <div class="col-xl-2">
                    <p class="float-end">
                        @vat SAR
                    </p>
                </div>
                <hr>
            </div>
            <div class="row">
                <div class="col-xl-10">
                    <p>Delivery Cost</p>
                </div>
                <div class="col-xl-2">
                    <p class="float-end">
                        10 SAR
                    </p>
                </div>
                <hr style="border: 2px solid black;">
            </div>
            <div class="row text-black">

                <div class="col-xl-12">
                    <p class="float-end fw-bold">
                        Total: @total SAR
                    </p>
                </div>
                <hr style="border: 2px solid black;">

                <p style="text-align:center;">Thank for your purchase</p>
            </div>

        </div>
    </div>
</div>
