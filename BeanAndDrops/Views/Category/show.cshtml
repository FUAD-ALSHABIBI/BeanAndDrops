@using BeanAndDrops.Models.Entities;
@model dynamic
@{
    ViewData["Title"] = "show";
    var category = Model.Category[0];
    var Products = Model.Products;
}

<section style="background-color: #eee;">
    <div class="text-center container py-5">
        <h4 class="mt-4"><strong>@category.Category_Name</strong></h4>
        <p class="mb-5"><strong>@category.Category_Description</strong></p>
        <div class="row">
            @foreach (var item in Products)
            {
            <div class="col-lg-4 col-md-12 mb-4">
               
                <div class="card">
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                         data-mdb-ripple-color="light">
                            <img src="@item.image" class="w-100" />
                            <a href="/products/@item.Product_id">
                            <div class="mask">
                                <div class="d-flex justify-content-start align-items-end h-100">
                                    <h5><span class="badge bg-primary ms-2">New</span></h5>
                                </div>
                            </div>
                            <div class="hover-overlay">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </div>
                        </a>
                    </div>
                    <div class="card-body">
                            <a href="/products/@item.Product_id" class="text-reset">
                              <h5 class="card-title mb-3">@item.Product_Name</h5>
                        </a>
                        <a href="/Category/show/@category.Category_Id" class="text-reset">
                                <p>@category.Category_Name</p>
                        </a>
                            @{
                                var net = @item.Product_Price * 0.15 + @item.Product_Price;
                            }
                            <h6 class="mb-3">@net SAR</h6>
                    </div>
                </div>
            </div>
             }
            
       
        </div>
    </div>
</section>